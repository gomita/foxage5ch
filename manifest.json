{
	"manifest_version": 2,
	"name": "FoxAge5ch",
	"version": "5.0.2",
	"description": "__MSG_extensionDescription__",
	"icons": {
		"48": "icons/icon-48.png",
		"96": "icons/icon-96.png"
	},
	"default_locale": "ja",
	"applications": {
		"gecko": {
			"id": "foxage2ch@xuldev.org"
		}
	},
	"background": {
		"scripts": [
			"background/service.js",
			"background/utils.js"
		]
	},
	"browser_action": {
		"default_title": "FoxAge5ch",
		"default_icon": "icons/icon-16.png"
	},
	"sidebar_action": {
		"browser_style": true,
		"default_title": "FoxAge5ch",
		"default_panel": "sidebar/view.html",
		"default_icon": "icons/icon-16.png"
	},
	"options_ui": {
		"page": "sidebar/options.html",
		"open_in_tab": false
	},
	"permissions": [
		"storage",
		"tabs",
		"downloads",
		"*://*.2ch.net/*",
		"*://*.5ch.net/*",
		"*://*.machi.to/*",
		"*://*.bbspink.com/*",
		"*://*.open2ch.net/*",
		"*://*.vip2ch.com/*",
		"*://*.shitaraba.net/*"
	]
}
